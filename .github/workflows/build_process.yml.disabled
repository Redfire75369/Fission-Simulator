name: Build Process
on:
  push:
    branches:
      - overhaul
      - overhaul-dev
  pull_request:
    branches:
      - overhaul
      - overhaul-dev

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - uses: actions/setup-node@v1.4.3
      with:
        node-version: 12.x

    - name: Install Dependencies
      run: npm ci

    - name: Run ESLint on Source Code
      run: npm run eslint
    - name: Run CSSLint on Stylesheets
      run: npm run csslint
    - name: Compile JSX
      run: npm run compile

    - uses: EndBug/add-and-commit@v4
      with:
        message: "Automated Build Process"
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
